<h1>Hello Ruby</h1>

<div class="button-container"><%= link_to "Create new post", new_post_path, class: "link-button" %></div>

<ul>
  <% @posts.each do |post| %>
  <li>
  <h2><%= post.title %></h2>
  <span>
  <small><%= post.created_at %></small>
  </span>
  <div class="edit-delete-wrapper">
  <%= link_to "Edit", edit_post_path(post), method: :delete, class: "link-button" %>
  <%= button_to "Delete", post_path(post), method: :delete, class: "link-delete-button" %>
  </div>
  </li>
<% end %>
</ul>